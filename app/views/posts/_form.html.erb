<%= form_with model: @post do |f| %>
  <%= label_tag :title, 'Input your Title' %><br>
  <%= f.text_field :title  %><br><br>

  <%= label_tag :description, 'Input your Description' %><br>
  <%= f.text_area :description  %><br><br>

  <%= f.submit("Submit", class: "btn btn-primary") %>

<% end %>


