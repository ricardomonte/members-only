<div class="container-fluid">
  <div class="row">
    <div class="col-6 mx-auto mt-5 text-center">
      <h2 class="display-4 mb-4">Sign in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: "font-weight-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control w-50 mx-auto' %>
        </div>

        <div class="field">
          <%= f.label :password, class: "font-weight-bold" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control w-50 mx-auto' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary my-4" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


